<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import java.net.*?>

<GridPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="HotelAnglia.controllers.ManagementLogin"
            fx:id="managementLoginWindow">

    <HBox styleClass="center" GridPane.rowIndex="0" GridPane.columnIndex="0"  >
        <Label text="Login" styleClass="title" />
    </HBox>

    <Label text="Username" styleClass="text" GridPane.rowIndex="1" GridPane.columnIndex="0" />
    <TextField fx:id="username" GridPane.rowIndex="2" GridPane.columnIndex="0" />
    <Label text="Password" styleClass="text" GridPane.rowIndex="3" GridPane.columnIndex="0" />
    <PasswordField fx:id="password" GridPane.rowIndex="4" GridPane.columnIndex="0" />
    <HBox styleClass="center" GridPane.rowIndex="5" GridPane.columnIndex="0" >
        <Label fx:id="errorlb" text="" styleClass="error" />
    </HBox>
    <HBox styleClass="center" GridPane.rowIndex="6" GridPane.columnIndex="0" >
        <Button fx:id="submitbtn" text="Submit" styleClass="normal-button" onAction="#submitHandler" />
        <Button fx:id="backbtn" text="Go Back" styleClass="normal-button" onAction="#closePage" />
    </HBox>

    <stylesheets>
        <URL value="@styles.css" />
    </stylesheets>
</GridPane>
