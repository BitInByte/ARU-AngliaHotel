<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import java.net.*?>
<?import javafx.collections.FXCollections?>

<GridPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="HotelAnglia.controllers.ApplicationFormView"
            fx:id="applicationFormWindow">

    <HBox styleClass="center" GridPane.rowIndex="0" GridPane.columnIndex="0"  >
        <Label text="Application Form" styleClass="title" />
    </HBox>

    <Label text="Full Name" styleClass="text" GridPane.rowIndex="1" GridPane.columnIndex="0" />
    <TextField fx:id="nametf" GridPane.rowIndex="2" GridPane.columnIndex="0" onKeyReleased="#nameValidator" />
    <Label text="Email" styleClass="text" GridPane.rowIndex="3" GridPane.columnIndex="0" />
    <TextField fx:id="emailtf" GridPane.rowIndex="4" GridPane.columnIndex="0" onKeyReleased="#checkEmailValidator" />
    <Label text="Payment Method" styleClass="text" GridPane.rowIndex="5" GridPane.columnIndex="0" />
    <ComboBox fx:id="paymentcb" GridPane.rowIndex="6" GridPane.columnIndex="0">
        <items>
            <FXCollections fx:factory="observableArrayList" >
                <String fx:value="Card" />
                <String fx:value="PayPal" />
            </FXCollections>
        </items>
        <value>
            <String fx:value="Card" />
        </value>
    </ComboBox>
    <HBox styleClass="center" GridPane.rowIndex="7" GridPane.columnIndex="0" >
        <Label fx:id="errorlb" text="" styleClass="error" />
    </HBox>
    <HBox styleClass="center" GridPane.rowIndex="8" GridPane.columnIndex="0" >
        <Button fx:id="submitbtn" text="Submit" styleClass="normal-button" onAction="#submitHandler" />
        <Button fx:id="backbtn" text="Go Back" styleClass="normal-button" onAction="#closePage" />
    </HBox>

    <stylesheets>
        <URL value="@styles.css" />
    </stylesheets>

</GridPane>
