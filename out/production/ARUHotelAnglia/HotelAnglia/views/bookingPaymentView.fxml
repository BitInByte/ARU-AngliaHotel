<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import java.net.*?>

<GridPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="HotelAnglia.controllers.BookingPaymentView"
            fx:id="bookingPaymentWindow">

    <HBox styleClass="center" GridPane.rowIndex="0" GridPane.columnSpan="2"  >
        <Label text="Payment" styleClass="title" />
    </HBox>

    <Label text="Customer Name: " styleClass="text" GridPane.rowIndex="1" GridPane.columnIndex="0" />
    <Label fx:id="customernamel" styleClass="text" GridPane.rowIndex="1" GridPane.columnIndex="1" />

    <Label text="Total Price: " styleClass="text" GridPane.rowIndex="2" GridPane.columnIndex="0" />
    <Label fx:id="totalpricel" styleClass="text" GridPane.rowIndex="2" GridPane.columnIndex="1" />

    <HBox styleClass="center" GridPane.rowIndex="3" GridPane.columnSpan="2" >
        <Button fx:id="proceedbtn" text="Proceed Payment" styleClass="normal-button" onAction="#proceedPaymentHandler" />
<!--        <Button fx:id="backbtn" text="Go Back" styleClass="normal-button" />-->
    </HBox>

    <stylesheets>
        <URL value="@styles.css" />
    </stylesheets>

</GridPane>
