<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import java.net.*?>

<GridPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="HotelAnglia.controllers.CustomerBill"
            fx:id="customerBillWindow">
    <HBox styleClass="center" GridPane.rowIndex="0" GridPane.columnSpan="2"  >
        <Label text="Bill" styleClass="title" />
    </HBox>

    <Label text="Customer Name: " styleClass="text" GridPane.rowIndex="1" GridPane.columnIndex="0" />
    <Label fx:id="customernamel" styleClass="text" GridPane.rowIndex="1" GridPane.columnIndex="1" />

    <Label text="Total Price: " styleClass="text" GridPane.rowIndex="2" GridPane.columnIndex="0" />
    <Label fx:id="totalpricel" styleClass="text" GridPane.rowIndex="2" GridPane.columnIndex="1" />

    <Label text="Details: " styleClass="text" GridPane.rowIndex="3" GridPane.columnIndex="0" />
    <Label fx:id="servicesl" styleClass="text" GridPane.rowIndex="3" GridPane.columnIndex="1" />

    <HBox styleClass="center" GridPane.rowIndex="4" GridPane.columnSpan="2" >
        <Button fx:id="closebtn" text="Close" styleClass="normal-button" onAction="#closePage" />
    </HBox>

    <stylesheets>
        <URL value="@styles.css" />
    </stylesheets>

</GridPane>
