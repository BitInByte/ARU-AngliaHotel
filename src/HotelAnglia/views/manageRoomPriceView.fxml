<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="HotelAnglia.controllers.ManageRoomPriceView">
    <GridPane fx:id="manageRoomWindow">
        <HBox styleClass="center" GridPane.rowIndex="0" GridPane.columnSpan="2"  >
            <Label text="Manage Room Price" styleClass="title" />
        </HBox>
        <Label styleClass="text" text="Room Type: " GridPane.rowIndex="1" GridPane.columnIndex="0" />
        <ComboBox fx:id="roomTypecb" GridPane.rowIndex="1" GridPane.columnIndex="1">
        </ComboBox>
        <Label styleClass="text" text="Room Price: " GridPane.rowIndex="2" GridPane.columnIndex="0" />
        <TextField fx:id="roompricetf" text="" GridPane.rowIndex="2" GridPane.columnIndex="1" onKeyReleased="#checkDisableButton" />
        <Button text="Submit" fx:id="submitbt" styleClass="normal-button"  GridPane.rowIndex="3" GridPane.columnIndex="0" onAction="#changeRoomPrice" />

    </GridPane>

</AnchorPane>
