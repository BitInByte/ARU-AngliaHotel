<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import java.net.*?>

<GridPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="HotelAnglia.controllers.BookingSummary"
            fx:id="bookingSummary">
    <HBox styleClass="center" GridPane.rowIndex="0" GridPane.columnSpan="2"  >
        <Label text="Booking Summary" styleClass="title" />
    </HBox>

    <Label text="Booking ID: " styleClass="text" GridPane.rowIndex="1" GridPane.columnIndex="0" />
    <Label fx:id="bookingidl" text="" styleClass="text" GridPane.rowIndex="1" GridPane.columnIndex="1" />
    <Label text="Room Type: " styleClass="text" GridPane.rowIndex="2" GridPane.columnIndex="0" />
    <Label fx:id="roomTypel" text="" styleClass="text" GridPane.rowIndex="2" GridPane.columnIndex="1" />
    <Label text="Reservation Date: " styleClass="text" GridPane.rowIndex="3" GridPane.columnIndex="0" />
    <Label fx:id="reservationDatel" text="" styleClass="text" GridPane.rowIndex="3" GridPane.columnIndex="1" />
    <Label text="Full Name: " styleClass="text" GridPane.rowIndex="4" GridPane.columnIndex="0" />
    <Label fx:id="fullNamel" text="" styleClass="text" GridPane.rowIndex="4" GridPane.columnIndex="1" />
    <Label text="Email: " styleClass="text" GridPane.rowIndex="5" GridPane.columnIndex="0" />
    <Label fx:id="emaill" text="" styleClass="text" GridPane.rowIndex="5" GridPane.columnIndex="1" />
    <Label text="Payment Method: " styleClass="text" GridPane.rowIndex="6" GridPane.columnIndex="0" />
    <Label fx:id="paymentMethodl" text="" styleClass="text" GridPane.rowIndex="6" GridPane.columnIndex="1" />

    <HBox styleClass="center" GridPane.rowIndex="7" GridPane.columnSpan="2"  >
        <Button text="Close" fx:id="closepagebt" styleClass="normal-button" onAction="#closePage" />
    </HBox>


    <stylesheets>
        <URL value="@styles.css" />
    </stylesheets>

</GridPane>
