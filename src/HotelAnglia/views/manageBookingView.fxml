<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="HotelAnglia.controllers.ManageBookingView">
    <GridPane alignment="TOP_CENTER" fx:id="manageBookingWindow">

        <HBox styleClass="center" GridPane.rowIndex="0" GridPane.columnIndex="0"  >
            <Label text="Manage Booking" styleClass="title" />
        </HBox>

        <Label text="Here will be the data" GridPane.rowIndex="1" GridPane.columnIndex="0" />


        <HBox styleClass="center" GridPane.rowIndex="2" GridPane.columnIndex="0" >
            <Button text="Approve"  styleClass="normal-button" />
            <Button text="Modify"  styleClass="normal-button" />
            <Button text="Manage"  styleClass="normal-button" />
            <Button text="Delete"  styleClass="normal-button" />
        </HBox>

    </GridPane>

    <stylesheets>
        <URL value="@styles.css" />
    </stylesheets>

</AnchorPane>
