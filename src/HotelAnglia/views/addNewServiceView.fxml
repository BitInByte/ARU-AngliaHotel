<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import java.net.*?>

<GridPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="HotelAnglia.controllers.AddNewServiceView"
            fx:id="addNewServiceWindow">

    <HBox styleClass="center" GridPane.rowIndex="0" GridPane.columnSpan="2" >
        <Label text="Add New Service" styleClass="title" />
    </HBox>

    <Label text="Booking ID: " styleClass="text" GridPane.rowIndex="1" GridPane.columnIndex="0" />
    <Label fx:id="bookingidl" text="" styleClass="text" GridPane.rowIndex="1" GridPane.columnIndex="1" />

    <Label text="Service: " styleClass="text" GridPane.rowIndex="2" GridPane.columnIndex="0" />
    <ComboBox fx:id="servicecb" GridPane.rowIndex="2" GridPane.columnIndex="1" />

    <HBox styleClass="center" GridPane.rowIndex="3" GridPane.columnSpan="2" >
        <Button fx:id="submitbtn" text="Add Service" styleClass="normal-button" onAction="#submitHandler" />
        <Button fx:id="backbtn" text="Go Back" styleClass="normal-button" onAction="#closePage" />
    </HBox>

    <stylesheets>
        <URL value="@styles.css" />
    </stylesheets>
</GridPane>
